# 数据库配置
DATABASE_URL=postgresql://user:password@localhost:5432/goldmonitor
# 或使用 MySQL
# DATABASE_URL=mysql://user:password@localhost:3306/goldmonitor

# Redis 配置
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# 应用配置
APP_ENV=development
APP_DEBUG=True
APP_PORT=5000
SECRET_KEY=your-secret-key-change-this-in-production

# API 密钥配置
# Kitco API（如需要）
KITCO_API_KEY=

# Investing.com API（如需要）
INVESTING_API_KEY=

# 邮件通知配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=goldmonitor@example.com

# 企业微信通知配置
WECHAT_WEBHOOK=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your_webhook_key
WECHAT_ENABLED=False

# 钉钉通知配置
DINGTALK_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=your_access_token
DINGTALK_SECRET=your_secret
DINGTALK_ENABLED=False

# 价格预警配置
PRICE_ALERT_THRESHOLD_HIGH=2100
PRICE_ALERT_THRESHOLD_LOW=2000
ALERT_CHECK_INTERVAL=600  # 秒

# 数据采集配置
SCRAPER_TIMEOUT=30  # 秒
SCRAPER_RETRY_TIMES=3
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# 数据保留配置
DATA_RETENTION_DAYS=365

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/goldmonitor.log

# 缓存配置
CACHE_TTL=300  # 秒
CACHE_ENABLED=True

# CORS 配置（如果需要前端分离部署）
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
